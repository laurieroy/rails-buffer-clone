<div class="d-flex align-items-center justify-content-between">
  <h1 class="mt-2">Twitter Accounts</h1>
  <%= link_to "Connect a Twitter account", "/auth/twitter", method: :post, class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
<div class="d-flex align-items-center mb-4">
  <%
=begin%>
  me-2
  <%
=end%>
  <div class="me-4">
    <%= twitter_account.name %>
    <%= image_tag twitter_account.image, class: "rounded-circle" %>
    <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", class: "text-decoration-none", target: :_blank %>
  </div>

  <%= button_to "Disconnect", twitter_account, class: "btn btn-sm btn-outline-danger ms-auto", method: :delete, data: {confirm: "Are you sure?"} %>
</div>
<% end %>